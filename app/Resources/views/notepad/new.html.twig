{#{% extends 'base.html.twig' %}#}

{#{% block body %}#}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {#{{ form_start(form) }}#}
    {{ form_start(form, {'action': path('notepad_new'), 'method': 'POST', 'attr' : { 'id' : 'formNewNotepad' }}) }}
{#{'attr' : { 'id' : 'formNewNotepad' }}#}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="form-group col-lg-6">
                    {{ form_row(form.subject) }}
                </div>
                <div class="form-group col-lg-6 d-flex">
                    <div class="form-group col-lg-6">
                        {{ form_row(form.carbonCopy) }}
                    </div>
                    <div class="form-group col-lg-6">
                        {{ form_row(form.site) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="form-group col-lg-12">
                    {{ form_row(form.comment, {'attr': { 'style' : 'height:275px' }}) }}
                </div>
            </div>
        </div>
    </div>
<div class="d-flex justify-content-end">
    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
    <input id="submit_notepad" class="btn btn-success btn-sm ml-2" type="submit" value="Create" />

    {#{{ form_widget(form.) }}#}
</div>
    {{ form_end(form) }}

<input type="hidden" id="alarm_id" name="alarm_id" value="2">

{#{% endblock %}#}
