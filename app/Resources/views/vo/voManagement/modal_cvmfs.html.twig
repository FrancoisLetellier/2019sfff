<div id="modalCvmfsCreate" class="modal fade" tabindex="-1" role="dialog" style="margin-top: 250px">
    <div class="modal-dialog" style="width: 60%">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center">Add Endpoint</h3>
            </div>
            <div class="modal-body">
                <div id="processCvmfs" style="display: none" class="alert alert-info alert-dismissible"></div>
                <label for="cvmfs"> {{ form_label(voForm.VoRessources.cvmfs) }}</label>
                <div class="d-flex d-row justify-content-start col-sm-12">
                    <div class="form-group row col-sm-8">
                        <label  class="col-sm-2 col-form-label text-right">http://</label>
                        <div class="col-sm-10 pl-0">
                            <input type="text" class="form-control" id="httpCreate" placeholder="Hostname" name="httpCreate">
                        </div>
                    </div>
                    <div class="form-group row col-sm-4">
                        <label  class="col-sm-2 col-form-label pr-0 pl-1">&nbsp;&nbsp;:</label>
                        <div class="col-sm-10 pl-0">
                            <input type="number" class="form-control" id="portCreate" placeholder="Port" min="0" max="99999" name="portCreate">
                        </div>
                    </div>
                </div>

                <input id="cvmfsCreate" type="hidden" class="form-control input-sm" name="cvmfsCreate" value="">

            </div>
            <div class="modal-footer">
                <button type="button" class="float-right btn-sm btn btn-secondary" data-dismiss="modal">Close
                </button>
                <input type="button" class="btn-sm float-right btn btn-success" id="createCvmfsFormSubmit" onclick="createCvmfs()" value="Save">
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->



