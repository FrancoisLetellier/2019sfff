<div id="modalRejection{{ serial }}" class="modal fade" tabindex="-1" role="dialog" style="margin-top: 250px">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Rejection of the VO {{ name }}</h4>
            </div>
            <div class="modal-body">
                <form  method="post" id="rejectionForm{{ serial }}">
                    <div class="form-group">
                        <label for="cause">Explanation</label>
                        <textarea class="form-control" required="required" id="cause" name="cause" placeholder="Enter the explanation of rejection" cols="5" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <input onclick="rejectionForm({{ serial }},'{{ path('rejectVo')}}')" class="btn btn-primary" value="Reject VO">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" >Cancel</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->
