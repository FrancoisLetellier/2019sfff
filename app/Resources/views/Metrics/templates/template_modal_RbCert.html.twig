{% form_theme rbCertForm 'bootstrap_3_layout.html.twig' %}
<div id="modalVoRbCert" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">

                <h3 class="modal-title float-lg-left">
                    <span class="fas fa-cog"></span>&nbsp;
                    <span>Edit Robot Certificate</span>
                </h3>
            </div>
            <div class="modal-body">

                <!-- alert message before remove certificate -->
                <div class="alert alert-warning" id="deleteWarning" style="display: none">You are about to delete this robot certificate</div>


                <form id="formContactEGI" method="POST">

                    <div class="form-group">

                        <label class="control-label">{{ form_label(rbCertForm.vo_name) }}</label>

                        <div>
                            {{ form_widget(rbCertForm.vo_name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">{{ form_label(rbCertForm.email) }}</label>

                        <div>
                            {{ form_widget(rbCertForm.email) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">{{ form_label(rbCertForm.service_name) }}</label>

                        <div>
                            {{ form_widget(rbCertForm.service_name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">{{ form_label(rbCertForm.service_url) }}</label>

                        <div>
                            {{ form_widget(rbCertForm.service_url) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">{{ form_label(rbCertForm.robot_dn) }}</label>

                        <div>
                            {{ form_widget(rbCertForm.robot_dn) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            {{ form_widget(rbCertForm.use_sub_proxies) }}
                            <!-- alert message when "use sub proxies" is selected -->
                            <div class="alert alert-warning" id="subProxiesInfo" style="display: none"><strong>In case of use,</strong> you guarantee that the robot certificate is
                                only used by the specific portal/service.
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_widget(rbCertForm.save) }}

                    </div>

                    {{ form_rest(rbCertForm) }}
                </form>

            </div>

            <div class="modal-footer">
                <a onclick="removeRbCert('{{ path("removeRbCert") }}')" id="rbCertRemButton" style="display: none" type="button" class="voAction btn btn-primary">Remove
                    Robot Certificate</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->

