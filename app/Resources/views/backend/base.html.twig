<body class="nav-md">

<div class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title" style="border: 0;">
                    <a href="{{ path('backendHome') }}" class="site_title"><i class="fas fa-sliders-h"></i> <span>Ops Backend</span></a>
                </div>

                <div class="clearfix"></div>

                <br/>

                <!-- sidebar menu -->
                <div id="sidebar-menu" class="main_menu_side hidden-print main_menu mt-4">
                    <div class="menu_section">
                        <h3>GENERAL</h3>
                        <ul class="nav side-menu">
                            <li>
                                <a href="{{ path("backendHome") }}"><i class="fas fa-home"></i> Home</a>
                            </li>
                        </ul>
                        {% for menu in backendMenu %}
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="{{ menu.icon }}"></i> {{ menu.title }}<span class="fas fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        {% for item in menu.items %}
                                            {% if item.parameter is defined %}
                                                <li><a href="{{ path(item.action, {'server':item.parameter}) }}">{{ item.title }}</a></li>
                                            {% else %}
                                                <li><a href="{{ path(item.action) }}">{{ item.title }}</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            </ul>
                        {% endfor %}

                    </div>

                    <div class="menu_section">
                        <h3>OPERATIONS PORTAL</h3>

                        <ul class="nav side-menu">
                            <li>
                                <a href="{{ path("home") }}"><img src="{{ asset('favicon.ico') }}"> Back to Operations Portal</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /sidebar menu -->
            </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
            <div class="nav_menu">
                <nav>
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fas fa-bars"></i></a>
                    </div>

                    <div class="page_title">
                        {{ pageTitle }}
                    </div>


                    <ul class="nav navbar-nav navbar-right">
                        <li id="backendDate">
                            <span class="fas fa-calendar"></span>&nbsp;{{ "now"|date("d M Y") }}
                        </li>
                    </ul>

                </nav>
            </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
            {% block body %}{% endblock %}
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
            <div class="pull-right">
                Ops Backend - CC IN2P3 - CNRS Â© {{ "now"|date("Y") }} - Template : <a href="https://colorlib.com">Colorlib</a>
            </div>
            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>
</div>

