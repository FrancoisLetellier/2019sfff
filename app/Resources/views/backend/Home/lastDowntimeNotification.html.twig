<div class="x_panel">
    <div class="x_title">
        <h2>Last Dowtime Notification
            <small>Database {{ app.environment }}</small>
        </h2>
        <a role="button" class="collapse-link pull-right"><i class="fa fa-chevron-up"></i></a>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        {% if error is defined %}
            <p class="alert alert-danger">{{ error }}</p>
        {% else %}
           <dl id="downtimeTable" class="dl-horizontal">
               <dt>Notification Date</dt>
               <dd>{{ dateDowntime|date("d M Y  H:i:s") }}</dd>
           </dl>
        {% endif %}
    </div>
</div>

