{% form_theme form_close_ticket 'bootstrap_4_layout.html.twig' %}

<div class="modal fade" id="close-ticket" tabindex="-1" role="dialog" aria-labelledby="close_ticket_label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span class="fa fa-window-close mr-2"></span>Close ticket</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{ form_start(form_close_ticket, {'action': path('delete_ticket'), 'method': 'POST', 'attr':{ 'id' : 'form-delete-ticket'}}) }}

                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                {{ form_row(form_close_ticket.solution, {'attr': { 'style' : 'height:300px' }}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                {{ form_row(form_close_ticket.addVerifyStatusInGGUS) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- hidden -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                {{ form_row(form_close_ticket.ticketId) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_row(form_close_ticket.site) }}

                <div class="d-inline-block">
                    <input id="submit_ticket" class="btn btn-danger" type="submit" value="Close" />
                </div>
                {{ form_end(form_close_ticket) }}

            </div>
        </div>
    </div>
</div>