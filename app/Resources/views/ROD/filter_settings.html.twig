{% form_theme form_settings 'bootstrap_4_layout.html.twig' %}
    <div class="collapse mb-4" id="settings">
    <div class="mb-4">
        {{ form_start(form_settings) }}
        <div class="row">
            <div class="col-lg-6">
                <h4 class="card card-header bg-dark text-white mb-3">Sites</h4>
                <div class="row">
                    <div class="form-group col-lg-6">
                        {{ form_row(form_settings.infrastructure) }}

                    </div>
                    <div class="form-group col-lg-6">
                        {{ form_row(form_settings.certifiedStatus) }}

                    </div>
                </div>


            </div>
            <div class="col-lg-6">
                <h4 class="card card-header bg-dark text-white mb-3">Alarms</h4>

                <div class="row">
                    <div class="form-group col-lg-4">
                    {{ form_row(form_settings.alarmStatus) }}
                         <span  class="help-block">Select the alarms you want to display depending from their nagios status</span>
                    </div>

                    <div class="form-group col-lg-4">
                        {{ form_row(form_settings.filter_columns) }}
                        <span  class="help-block">Select how you want to sort the table - by which item </span>
                    </div>

                    <div class="form-group col-lg-4">
                        {{ form_row(form_settings.profile_alarm) }}
                        <span class="help-block">Select the alarms you want to display depending from the profiles</span>
                    </div>
                </div>


            </div>

            <div class="form-group col-lg-12 text-center" >
                <button type="submit" class="btn btn-dark">
                    <span class="fa fa-floppy-o "></span>SAVE
                </button>
            </div>
        </div>

        {{ form_end(form_settings) }}
    </div>
</div>